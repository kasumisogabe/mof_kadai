<h2>閲覧</h2>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>
<p>
  <strong>住所:</strong>
  <%= @property.adress %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>
<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>


<% @closest_stations.each do |closest_station| %>
  <%# チェリー本コラム参考 %>
    <% @n ||= 0 %>
    <h2>最寄り駅<%= @n += 1 %></h2>
  <% if @property.closest_stations.any? %>
    <p>
    <strong>路線名:</strong>
    <%= closest_station.line_name %>
    </p>

    <p>
    <strong>駅名:</strong>
    <%= closest_station.station %>
    </p>

    <p>
    <strong>徒歩分数:</strong>
    <%= closest_station.time %>
    </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
