<%= form_with(model: @property, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>
      <ul>
        <% @property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
   <p><%= form.text_field :rent %>円</p>
  </div>

  <div class="field">
    <%= form.label :住所%>
    <%= form.text_field :adress %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
   <p><%= form.text_field :age %>年</p>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :note %>
  </div>

  
  <%= form.fields_for :closest_stations do |closest_station| %>
    <%# チェリー本コラム参考 %>
    <% @n ||= 0 %>
    <h2>最寄り駅<%= @n += 1 %></h2>
    <div class="line_name">
      <%= closest_station.label :路線名 %><br>
      <%= closest_station.text_field :line_name %>
    </div>
    <div class="station">
      <%= closest_station.label :駅名 %><br>
      <%= closest_station.text_field :station %>
    </div>
    <div class="time">
      <%= closest_station.label :徒歩分数 %><br>
      <%= closest_station.text_field :time %>分<br>
    </div>
    <%= form.submit '登録する' %>
    <% end %>

  <% end %>